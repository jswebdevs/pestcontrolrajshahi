<IfModule mod_rewrite.c>
  RewriteEngine On
  
  # 1. Force HTTPS (Optional but Recommended)
  # Uncomment the next two lines if you have an SSL certificate
  # RewriteCond %{HTTPS} off
  # RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

  # 2. Allow access to existing files and directories
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # 3. Fallback to index.html for everything else
  # This lets React Router handle the URL
  RewriteRule ^ index.html [L]
</IfModule>

# Optional: Enable Gzip Compression for speed
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>